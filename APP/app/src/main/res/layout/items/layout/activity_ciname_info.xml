<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".view.CinameInfoActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="160dp"
        android:background="#141931">

        <ImageView
            android:id="@+id/ima_finish"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="28dp"
            android:layout_marginTop="41dp"
            android:src="@mipmap/back" />

        <CheckBox
            android:id="@+id/checkbox_xin"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginLeft="286dp"
            android:layout_marginTop="82dp"
            android:background="@mipmap/movie_info_hreat_n"
            android:button="@null" />

        <ImageView
            android:layout_width="13dp"
            android:layout_height="16dp"
            android:layout_marginLeft="267dp"
            android:layout_marginTop="125dp"
            android:src="@mipmap/group_10" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="148dp"
            android:layout_marginTop="38dp"
            android:text="影院详情"
            android:textColor="#fff" />

        <TextView
            android:id="@+id/cinema_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="24dp"
            android:layout_marginTop="80dp"
            android:textColor="#fff" />

        <TextView
            android:id="@+id/cinema_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="24dp"
            android:layout_marginTop="122dp"
            android:textColor="#d3af56"
            android:textSize="13dp" />

        <TextView
            android:id="@+id/cinema_label_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="122dp"
            android:layout_toRightOf="@id/cinema_label"
            android:textColor="#d3af56"
            android:textSize="13dp" />

        <TextView
            android:id="@+id/cinema_label_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="122dp"
            android:layout_toRightOf="@id/cinema_label_1"
            android:textColor="#d3af56"
            android:textSize="13dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="287dp"
            android:layout_marginTop="122dp"
            android:text="到这儿去"
            android:textColor="#fff" />
    </RelativeLayout>

    <com.google.android.material.tabs.TabLayout
        android:id="@+id/tab"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        app:tabGravity="fill"
        app:tabMaxWidth="0dp"
        app:tabMode="fixed" />

    <androidx.viewpager.widget.ViewPager
        android:id="@+id/cinema_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:background="#141931" />

    <Button
        android:id="@+id/cinema_but"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#e8185e"
        android:text="查看该影院电影排期"
        android:textColor="#fff" />
</LinearLayout>
