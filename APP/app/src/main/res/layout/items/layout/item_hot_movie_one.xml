<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.facebook.drawee.view.SimpleDraweeView
        android:id="@+id/hot_image_pic_one"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_marginLeft="24dp"
        android:layout_marginRight="24dp"
        android:scaleType="fitXY"
        android:src="@mipmap/ic_launcher" />

    <TextView
        android:id="@+id/hot_tv_name_one"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/hot_image_pic_one"
        android:layout_marginLeft="40dp"
        android:text="name"
        android:textColor="#FFFFFF"
        android:textSize="20dp" />

    <TextView
        android:id="@+id/hot_tv_score_one"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/hot_image_pic_one"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@id/hot_tv_name_one"
        android:text="score"
        android:textColor="#CE180B"
        android:textSize="15dp" />

    <Button
        android:id="@+id/bt_hot_movie_one"
        android:layout_width="100dp"
        android:layout_height="30dp"
        android:layout_alignRight="@id/hot_image_pic_one"
        android:layout_alignBottom="@id/hot_image_pic_one"
        android:background="@drawable/button_corners"
        android:text="购票"
        android:textColor="#FFF"
        android:textSize="20dp" />
</RelativeLayout>