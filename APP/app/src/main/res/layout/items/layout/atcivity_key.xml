<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#222952"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="130dp"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="30dp"
        android:background="#1c2243">

        <com.facebook.drawee.view.SimpleDraweeView
            android:id="@+id/item_key_image"
            android:layout_width="100dp"
            android:layout_height="130dp"
            android:layout_margin="10dp"
            android:src="@mipmap/ic_launcher" />


        <TextView
            android:id="@+id/item_key_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_toRightOf="@id/item_key_image"
            android:text="name"
            android:textColor="#FFF"
            android:textSize="15dp" />

        <TextView
            android:id="@+id/item_key_director"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:layout_toRightOf="@id/item_key_image"
            android:text="name"
            android:textColor="#FFF"
            android:textSize="15dp" />

        <TextView
            android:id="@+id/item_key_starring"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="70dp"
            android:layout_toRightOf="@id/item_key_image"
            android:text="name"
            android:textColor="#FFF"
            android:textSize="13dp" />

        <TextView
            android:id="@+id/item_key_score"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="100dp"
            android:layout_toRightOf="@id/item_key_image"
            android:text="name"
            android:textColor="#FFF"
            android:textSize="13dp" />


        <Button
            android:id="@+id/bt_key"
            android:layout_width="80dp"
            android:layout_height="25dp"
            android:layout_alignParentRight="true"
            android:layout_marginTop="100dp"
            android:layout_marginRight="20dp"
            android:background="@drawable/button_corners"
            android:text="购票"
            android:textColor="#FFF"
            android:textSize="20dp" />
    </RelativeLayout>
</LinearLayout>