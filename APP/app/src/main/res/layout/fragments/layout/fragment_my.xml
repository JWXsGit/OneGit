<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#141931"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/image_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="313dp"
        android:layout_marginTop="44dp"
        android:src="@mipmap/xinxi" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="42dp"
        android:text="我的"
        android:textColor="#FFF"
        android:textSize="23dp"
        android:textStyle="bold" />

    <RelativeLayout
        android:id="@+id/my_r1"
        android:layout_width="312dp"
        android:layout_height="90dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="94dp"
        android:background="#FFF">

        <ImageView
            android:id="@+id/image_pic"
            android:layout_width="46dp"
            android:layout_height="46dp"
            android:layout_marginLeft="12dp"
            android:layout_marginTop="22dp"
            android:background="@mipmap/ic_launcher_round" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="28dp"
            android:layout_toRightOf="@id/image_pic"
            android:text="电影故事"
            android:textSize="23dp"
            android:textStyle="bold" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginTop="30dp"
            android:layout_marginRight="20dp"
            android:src="@mipmap/shape" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/my_r2"
        android:layout_width="312dp"
        android:layout_height="40dp"
        android:layout_below="@id/my_r1"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:background="#222952">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/wodedianyingpiao" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="60dp"
            android:text="电影票"
            android:textColor="#FFF"
            android:textSize="17dp" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="20dp"
            android:src="@mipmap/shape_2" />
    </RelativeLayout>


    <RelativeLayout
        android:layout_width="312dp"
        android:layout_height="300dp"
        android:layout_below="@id/my_r2"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:background="#222952">

        <ImageView
            android:id="@+id/image_copy1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="18dp"
            android:layout_marginTop="30dp"
            android:src="@mipmap/copy_1" />

        <ImageView
            android:id="@+id/image_reserve"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="144dp"
            android:layout_marginTop="30dp"
            android:src="@mipmap/copy_2" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="132dp"
            android:layout_marginTop="73dp"
            android:text="我的预约"
            android:textColor="#FFF"
            android:textSize="15dp" />

        <ImageView
            android:id="@+id/Buy_tickets"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="240dp"
            android:layout_marginTop="30dp"
            android:src="@mipmap/copy_3" />

        <ImageView
            android:id="@+id/Seen_Movie"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="120dp"
            android:src="@mipmap/copy_4" />

        <ImageView
            android:id="@+id/comment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="132dp"
            android:layout_marginTop="120dp"
            android:src="@mipmap/copy_5" />

        <ImageView
            android:id="@+id/Feedback"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="240dp"
            android:layout_marginTop="120dp"
            android:src="@mipmap/copy_6" />

        <ImageView
            android:id="@+id/my_settings"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="32dp"
            android:layout_marginTop="200dp"
            android:src="@mipmap/copy_7" />
    </RelativeLayout>
</RelativeLayout>