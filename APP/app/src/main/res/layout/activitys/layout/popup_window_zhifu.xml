<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#a51c1c1c"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="500dp"
        android:layout_marginBottom="20dp"
        android:background="#FFF"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#494343"
            android:gravity="center"
            android:text="选择支付方式"
            android:textColor="#FFF"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/text_wx"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:drawableLeft="@mipmap/ic_pay_weixin"
            android:gravity="center"
            android:text="微信支付"
            android:textColor="#6F6B6B"
            android:textSize="16dp" />

        <TextView
            android:id="@+id/text_zfb"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:drawableLeft="@mipmap/ic_pay_zhifubao"
            android:gravity="center"
            android:text="支付宝支付"
            android:textColor="#6F6B6B"
            android:textSize="16dp" />
    </LinearLayout>
</LinearLayout>